extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Comments List 
    .w3-container
      table.w3-table-all
        tr
          th Autor
          th Assunto
          th Description
        each comment in p
            tr
              td= comment.Autor
              td= comment.Assunto
              td= comment.Description
              
    footer.w3-container.w3-teal
      h5 Generated for TP_EngWeb2023 in #{d}
    