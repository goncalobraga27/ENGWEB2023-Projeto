extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
    //- SO PRA TESTES, APAGAR NO FIM
    h1 Process List #[a.w3-btn.w3-round.w3-grey(href="/process/registo") + ] [NÂº de Processos: #{plist.length}]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Author
          //- Trocar isto por lugar
          th ScopeContent
        
        each p in plist
          tr
            td= p.id
            td
              a(href="/process/"+p.id)= p.Author
            //- Trocar isto por lugar  
            td= p.ScopeContent
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/process/edit/"+p.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/process/delete/"+p.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated for TP_EngWeb2023 in #{d}
    