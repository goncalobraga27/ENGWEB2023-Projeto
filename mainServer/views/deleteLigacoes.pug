extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Remover Ligação Form
        form.w3-container(method="POST")
            each item in llist
                input(type="checkbox" name="elementoSelec" value=String(item))
                label Ligação: #{item}
                br
            input(type="submit" value="Remover Ligações Selecionados")
        footer.w3-container.w3-teal.w3-center
            h5 João Loureiro - a97257 | Engenharia Web 2023 - Universidade do Minho
            h5 Generated by server: #{d}