extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Process List [Nº de Processos: #{plist.length}]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Ligações
          th ScopeContent
          th Related Material 
        
        each p in plist
          tr
            td
              a(href="/processos/"+p.id)= p.id
            td 
              each l in p.ligacoes
                a(href="/processos/"+l)= l+"|"
            td= p.ScopeContent
            td= p.RelatedMaterial
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/processos/edit/"+p.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/processos/delete/"+p.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated for TP_EngWeb2023 in #{d}
    